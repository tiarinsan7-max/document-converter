# Application Settings
APP_NAME="Universal Document Converter"
APP_VERSION="1.0.0"

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=False

# File Upload Settings
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# Conversion Settings
DEFAULT_QUALITY=high
ENABLE_OCR=True
PRESERVE_FORMATTING=True

# Logging
LOG_LEVEL=INFO

# Security (Add your allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Performance
MAX_WORKERS=4
CHUNK_SIZE=8192

# Optional: Tesseract Path (if not in system PATH)
# TESSERACT_CMD=/usr/bin/tesseract

# Optional: Database (for future features)
# DATABASE_URL=sqlite:///./converter.db
